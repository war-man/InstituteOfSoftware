</div>
<script>
    var date = "";
    //转换时间的方法
    //转换时间的方法包含时分秒
    function formatTen(num) {
        return num > 9 ? (num + "") : ("0" + num);
    }
    function formatDate(dates) {
        var date = new Date(parseInt(dates.slice(6)));
        var year = date.getFullYear();
        var month = date.getMonth() + 1;
        var day = date.getDate();
        var hour = date.getHours();
        var minute = date.getMinutes();
        var second = date.getSeconds();
        return year + "-" + formatTen(month) + "-" + formatTen(day) + " " + formatTen(hour) + ":" + formatTen(minute) + ":" + formatTen(second);
    }
    //table重载的方法
    function LoadTable() {
        layui.use(['table', 'form'], function () {
            var table = layui.table;
            var form = layui.form;
            $("#form_serch")[0].reset();
            form.render();
            table.reload('tabletest1', { url: '/Market/StudentDataKeep/OnewData' });
        });

    }

    function LoadTable2() {
        layui.use(['table'], function () {
            var table = layui.table;
            table.reload('tabletest1', { url: '/Market/StudentDataKeep/OnewData' });
        });

    }
    //错误提示提示
    function TiShi(msg) {
        layui.use(['layer'], function () {
            var layer = layui.layer;
            layer.msg(msg, {
                icon: 2,
                shade: 0.8
            });
        });
    }
    //模糊查询
    function my_searchBtn() {
        layui.use(['table'], function () {
            var table = layui.table;
            var findNamevalue = $("#findNamevalue").val();
            var findPhonevalue = $("#findPhonevalue").val();
            var findInformationvalue = $("#findInformationvalue").val();
            var findStartvalue = $("#findStartvalue").val();//获取开始时间
            var findEndvalue = $("#findEndvalue").val();//获取结束时间
            var findAreavalue = $("#findAreavalue").val();//获取区域
            var findBeanManvalue = $("#findBeanManvalue").val();//获取备案人
            var S_consultTeacher = $("#S_consultTeacher").val();
            var S_status = $("#S_status").val();
            var S_party = $("#S_party").val();
            var S_intosysMan = $("#S_intosysMan").val();

            var S_QQ = $("#S_QQ").val();
            var eduttion = $("#eduttion").val();
            var S_Reack = $("#S_Reack").val();

            console.log(findNamevalue);
            if (findNamevalue.length <= 0 && findPhonevalue.length <= 0 && findInformationvalue == "0" && findStartvalue.length <= 0 && findEndvalue.length <= 0 && findAreavalue == "0" && findBeanManvalue.length <= 0 && S_consultTeacher == "0" && S_status == "0" && S_intosysMan.length <= 0 && S_party.length <= 0 && S_QQ.length <= 0 && eduttion.length != "0" && S_Reack.length<=0) {
                table.reload('tabletest1', { url: '/Market/StudentDataKeep/OnewData' });
            } else {
                table.reload('tabletest1', {
                    url: '/Market/StudentDataKeep/GetTableData_Mark'
                    , where: { 'findNamevalue': findNamevalue, 'findPhonevalue': findPhonevalue, 'findInformationvalue': findInformationvalue, 'findStartvalue': findStartvalue, 'findEndvalue': findEndvalue, 'findAreavalue': findAreavalue, 'findBeanManvalue': findBeanManvalue, "S_consultTeacher": S_consultTeacher, "S_status": S_status, "S_party": S_party, "S_intosysMan": S_intosysMan, "S_QQ": S_QQ, "eduttion": eduttion, "S_Reack": S_Reack } //设定异步数据接口的额外参数
                });
            }

        });
    };

    $(function () {
         

        //这是一个模糊查询的Enter快捷键
        $(document).keydown(function (event) {
            //console.log(event);
            if (event.keyCode === 13) {
                my_searchBtn();
            }
        });

        //这是一个模糊查询的方法
        $("#searchBtn").click(function () {
            my_searchBtn();
        });

    });

 

    layui.use(['table', 'laydate', 'form', 'element'], function () {
        var table = layui.table;
        var laydate = layui.laydate;
        var form = layui.form;
        var element = layui.element;
        var layer = layui.layer;
        //月份小于10的前面加个0
        function MoDay(a) {
            if (a < 10) {
                return "0" + a;
            }
            return a;
        }
        ////系统时间

        var curDate = new Date();
        var curYearMonthrDay = curDate.getFullYear() + "-" + MoDay(parseInt(curDate.getMonth()) + 1) + "-" + MoDay(parseInt(curDate.getDate()));

        // 时间选择器初始化 开始时间
        laydate.render({
            elem: '#findStartvalue',
            format: 'yyyy-MM-dd',
            done: function (value, date, endDate) {
                var startDate = new Date(value).getTime();
                var endTime = new Date($('#findEndvalue').val()).getTime();
                if (endTime < startDate) {
                    layer.msg('结束时间不能小于开始时间');
                    $('#findStartvalue').val($('#findEndvalue').val());
                }
                if (startDate > curDate.getTime()) {
                    layer.msg('开始时间不能大于当前时间');
                    $('#findStartvalue').val(curYearMonthrDay);
                }
            }
        })
        // 时间选择器初始化 结束时间
        laydate.render({ //结束时间
            elem: '#findEndvalue',
            format: 'yyyy-MM-dd',
            done: function (value, date, endDate) {
                var startDate = new Date($('#findStartvalue').val()).getTime();
                var endTime = new Date(value).getTime();
                if (endTime < startDate) {
                    layer.msg('结束时间不能小于开始时间');
                    $('#findEndvalue').val($('#findStartvalue').val());
                }
                if (endTime > curDate.getTime()) {
                    layer.msg('结束时间不能大于当前时间');
                    $('#findEndvalue').val(curYearMonthrDay);
                }
            }
        })
        //上门日期
        laydate.render({
            elem: '#OutDate',
            format: 'yyyy-MM-dd',
            done: function (value) {
                date = value;
            }
        });
 
        table.render({
                elem: '#tabletest1'
            , url: '/Market/StudentDataKeep/OnewData'
                , toolbar: '#toolbarDemo1'
                , cols: [[
                    { type: 'checkbox' }
                    , { field: 'StuName', title: '姓名'}
                    , { field: 'StuSex', title: '性别' }
                    , { field: 'Stuphone', title: '联系电话' }
                    , { field: 'StuQQ', title: 'QQ' }
                    , { field: 'StuSchoolName', title: '学校' }
                    , { field: 'RegionName', title: '区域' }
                    , { field: 'stuinfomation', title: '信息来源' }
                    , { field: 'ConsultTeacher', title: '咨询师' }
                    , { field: 'empName', title: '备案人' }
                    , { field: 'StuEducational', title: '学历' }
                    , { field: 'Party', title: '关联人' }
                    , { field: 'StatusName', title: '学生状态' }
                    , { field: 'MarketType', title: '市场类型' }
                    , { field: 'StuEntering', title: '录入人员' }
                    , { field: 'StuDateTime', title: '备案日期', width: 180, templet: function (res) { return formatDate(res.StuDateTime); } }
                    , {
                        fixed: 'right', title: '操作', width: 100, templet: function (res) {
                            
                           return '<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del" > 查看详情</a >';
                             
                        }
                    }
                ]]
                , page: true
                , limits: [18, 40, 50, 60, 80, 100]
                , limit: 18
            });       

        //监听行工具事件
        table.on('tool(tabletest1)', function (obj) {
            var data = obj.data;
             if (obj.event === 'del') {
                var id = Number(data.Id)
                if (id >= 54118) {
                    layer.open({
                        type: 2,
                        content: '/Market/StudentDataKeep/LookDetailsView/' + data.Id
                        , area: ['800px', '740px'],
                        title: '备案数据详情'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                    });
                } else {
                    layer.open({
                        type: 2,
                        content: '/Market/Sch_Market/Sch_MarketDetailsView/' + data.Id
                        , area: ['800px', '740px'],
                        title: '备案数据详情'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                    });
                }

            }  
        });

        //头工具栏事件
        table.on('toolbar(tabletest1)', function (obj) {
            var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                case 'getCheckData':
                    layer.open({
                        type: 2,
                        content: '/Market/StudentDataKeep/AddorEdit'
                        , area: ['950px', '710px'],
                        title: '添加备案信息页面'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                        , scrollbar: false
                    });
                    break;
                case 'getFileInto':
                    layer.open({
                        type: 2,
                        content: '/Market/StudentDataKeep/ExcleIntoView'
                        , area: ['1000px', '720px'],
                        title: '导入Excle文件'
                        , shade: 0.8
                        , anim: 4
                        , skin: 'demo-class'
                    });
                    break;
            };
        });
    });

   
</script>

