    //加载菜单
    function loadMenus() {

        for (var i = 0; i < MenuData.length; i++) {

            if (MenuData[i].IsShow == true) {
                var li = $("<li class='test'></li>");
                var a = $("<a></a>");
                a.text(MenuData[i].Name);
                a.attr("href", MenuData[i].Url);
                a.addClass("active-menu");
                var di = $('<i class="fa fa-sitemap"></i>');
                var span = $('<span class="fa arrow"></span>');
                a.append(di);
                a.append(span);
                li.append(a);

                //console.log(li);
                for (var j = 0; j < MenuData[i].SubMenus.length; j++) {
                    index = 1;
                    loadSonMenu(MenuData[i], li);
                }
                $("#main-menu").append(li);
            }
        }
    }

    var index = 1;

    function loadSonMenu(Menu, html) {

        //console.log(Menu);


        if (Menu.SubMenus != null) {
            switch (index) {
                case 1:
                    var ul = $('<ul class="nav nav-second-level"></ul>');
                    break;
                case 2:
                    var ul = $('<ul class="nav nav-third-level"></ul>');
                default:
            }
            
            
            for (var i = 0; i < Menu.SubMenus.length; i++) {


                if (Menu.SubMenus[i].IsShow == true) {
                  
                    var li = $("<li class='test'></li>");
                    var a = $("<a></a>");
                    a.text(Menu.SubMenus[i].Name);
                    //console.log(Menu.SubMenus[i]);

                    a.attr("href", Menu.SubMenus[i].Url);
                    if (Menu.SubMenus[i].SubMenus != null) {

                        var di = $('<i class="fa fa-sitemap"></i>');
                        var span = $('<span class="fa arrow"></span>');

                        a.append(di);
                        a.append(span);
                    }
                  
                 
                    li.append(a);                  
                    ul.append(li);

                    if (Menu.SubMenus != null) {
                        index++;
                        loadSonMenu(Menu.SubMenus[i], li);
                      
                    }
                }
            }
            //console.log(ul);
            html.append(ul);
        }
    }

</script>
